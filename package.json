{
  "name": "@raulfdm/blog-components",
  "version": "2.0.0-beta.0",
  "author": "Raul Melo",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "module": "dist/blog-components.esm.js",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "postbuild": "node scripts/copyAssets.js",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "yarn build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -s ./static -p 6006",
    "build-storybook": "NODE_ENV=production build-storybook -s ./static",
    "release": "semantic-release"
  },
  "peerDependencies": {
    "framer-motion": ">=3",
    "react": ">=17",
    "tailwindcss": ">=2"
  },
  "dependencies": {
    "@emotion/react": "^11.1.4",
    "@emotion/styled": "^11.0.0",
    "classnames": "^2.2.6"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@emotion/jest": "^11.1.0",
    "@fullhuman/postcss-purgecss": "^3.1.3",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.0",
    "@size-limit/preset-small-lib": "^4.9.1",
    "@storybook/addon-essentials": "^6.1.11",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.1.11",
    "@storybook/addons": "^6.1.11",
    "@storybook/react": "^6.1.11",
    "@tailwindcss/postcss7-compat": "^2.0.2",
    "@tailwindcss/typography": "^0.3.1",
    "@testing-library/react": "^11.2.2",
    "@types/classnames": "^2.2.11",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "autoprefixer": "^9",
    "babel-loader": "^8.2.2",
    "framer-motion": "^3.1.1",
    "fs-extra": "^9.0.1",
    "husky": "^4.3.6",
    "postcss": "^7",
    "postcss-preset-env": "^6.7.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "semantic-release": "^17.3.0",
    "size-limit": "^4.9.1",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.1.3"
  },
  "size-limit": [
    {
      "path": "dist/blog-components.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/blog-components.esm.js",
      "limit": "10 KB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "snapshotSerializers": [
      "@emotion/jest/serializer"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}