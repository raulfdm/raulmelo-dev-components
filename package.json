{
  "name": "@raulfdm/blog-components",
  "version": "1.4.0",
  "author": "Raul Melo",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/raulfdm/raulmelo-dev-components"
  },
  "publishConfig": {
    "access": "public"
  },
  "module": "dist/blog-components.esm.js",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "postbuild": "node scripts/copyAssets.js",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "yarn build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -s ./static -p 6006",
    "build-storybook": "NODE_ENV=production build-storybook -s ./static",
    "release": "semantic-release",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "peerDependencies": {
    "framer-motion": ">=3",
    "react": ">=17",
    "tailwindcss": ">=2"
  },
  "dependencies": {
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5",
    "@juggle/resize-observer": "^3.2.0",
    "classnames": "^2.2.6",
    "lodash.omit": "^4.5.0",
    "react-use-measure": "^2.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.17",
    "@babel/plugin-transform-runtime": "^7.12.17",
    "@emotion/jest": "^11.2.0",
    "@fullhuman/postcss-purgecss": "~3",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.0",
    "@size-limit/preset-small-lib": "^4.9.1",
    "@storybook/addon-essentials": "^6.1.18",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.1.18",
    "@storybook/addons": "^6.1.18",
    "@storybook/react": "^6.1.18",
    "@tailwindcss/postcss7-compat": "npm:@tailwindcss/postcss7-compat",
    "@tailwindcss/typography": "^0.4.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/classnames": "^2.2.11",
    "@types/lodash.omit": "^4.5.6",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "autoprefixer": "~9",
    "babel-loader": "^8.2.2",
    "framer-motion": "^3.6.2",
    "fs-extra": "^9.1.0",
    "husky": "^5.1.1",
    "pinst": "^2.1.4",
    "postcss": "~8",
    "postcss-preset-env": "^6.7.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "semantic-release": "^17.3.9",
    "size-limit": "^4.9.1",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5"
  },
  "size-limit": [
    {
      "path": "dist/blog-components.cjs.production.min.js",
      "limit": "100 KB"
    },
    {
      "path": "dist/blog-components.esm.js",
      "limit": "100 KB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "^4.1.1",
    "**/@typescript-eslint/parser": "^4.1.1"
  }
}